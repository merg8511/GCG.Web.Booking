@page "/"
@using GCG.Web.Booking.Components.Sections

<PageTitle>Refugio del sol</PageTitle>

<Hero />
<CallToAction />
<ServiceSection />
<GallerySection />
@* <Reviews />
<Location />
<FAQ />
<NewsLetter /> *@
<Footer />

@code {
    @inject IJSRuntime JS

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Yield(); // deja que el DOM pinte
            try
            {
                await JS.InvokeVoidAsync("animInitAOS");
                await JS.InvokeVoidAsync("animInitGSAP");
                await JS.InvokeVoidAsync("initPSWP", "#pswp-gallery");

            }
            catch { }
        }
    }
}