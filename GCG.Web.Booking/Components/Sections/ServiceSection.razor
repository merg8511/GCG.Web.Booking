        display: -webkit-box !important;
        -webkit-line-clamp: 3 !important;
        -webkit-box-orient: vertical !important;
        overflow: hidden !important;
    }

    /* Featured Ribbon */
    .featured-ribbon {
        position: absolute !important;
        top: 40px !important;
        left: -35px !important;
        background: linear-gradient(135deg, #ffb703 0%, #fb8500 100%) !important;
        color: white !important;
        padding: 4px 40px !important;
        transform: rotate(-45deg) !important;
        font-size: 0.75rem !important;
        font-weight: 600 !important;
        text-transform: uppercase !important;
        box-shadow: 0 4px 12px rgba(251, 133, 0, 0.4) !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }

    /* CTA final */
    .cta-container {
        margin-top: 5rem !important;
        padding: 3rem 2rem !important;
        background: linear-gradient(135deg, rgba(33, 158, 188, 0.1) 0%, rgba(255, 183, 3, 0.1) 100%) !important;
        border-radius: 20px !important;
        text-align: center !important;
    }

    /* Animación pulse para botones */
    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(33, 158, 188, 0.7);
        }

        50% {
            box-shadow: 0 0 0 10px rgba(33, 158, 188, 0);
        }
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    /* Responsive */
    @@media (max-width: 960px) {
        .services-section {
            padding: 3rem 0 !important;
        }

        .section-header {
            margin-bottom: 3rem !important;
        }

        .category-block {
            margin-bottom: 3rem !important;
        }

        .category-header {
            flex-direction: column !important;
            text-align: center !important;
            gap: 0.5rem !important;
        }

        .service-card {
            margin-bottom: 1rem !important;
        }

        .cta-container {
            margin-top: 3rem !important;
            padding: 2rem 1rem !important;
        }
    }

    @@media (max-width: 600px) {
        .service-description {
            -webkit-line-clamp: 4;
        }

        .featured-ribbon {
            font-size: 0.65rem !important;
            padding: 3px 35px !important;
        }
    }

