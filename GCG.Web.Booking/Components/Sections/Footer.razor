<section style="background-color:white;">
    <MudGrid Style="height:200px">
        <MudItem xs="12" Class="pa-4">
            <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Class="mt-4">
                <MudImage Src="images/logo-negro.png" Elevation="0" Height="120" Width="300" />
            </MudStack>
        </MudItem>
    </MudGrid>
</section>
<section class="footer-section w-full bg-cover bg-center bg-no-repeat px-10 py-8">
    <MudGrid Justify="Justify.Center">

        <!-- Navegación -->
        <MudItem xs="12" sm="6" md="4" Style="text-align:center;">
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Style="text-transform:uppercase" Class="footer-heading">Explora</MudText>
            <MudList T="string" Dense="true">
                <MudListItem Style="text-align:center;text-transform:uppercase" Class="footer-text"><MudLink Href="#home">Inicio</MudLink></MudListItem>
                <MudListItem Style="text-align:center;text-transform:uppercase" Class="footer-text"><MudLink Href="#services">Servicios</MudLink></MudListItem>
                <MudListItem Style="text-align:center;text-transform:uppercase" Class="footer-text"><MudLink Href="#review">Experiencias</MudLink></MudListItem>
                <MudListItem Style="text-align:center;text-transform:uppercase" Class="footer-text"><MudLink Href="#gallery">Galería</MudLink></MudListItem>
                <MudListItem Style="text-align:center;text-transform:uppercase" Class="footer-text"><MudLink Href="#faq">FAQ</MudLink></MudListItem>
            </MudList>
        </MudItem>

        <!-- Contacto -->
        <MudItem xs="12" sm="6" md="4" Style="text-align:center;">
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Style="text-transform:uppercase" Class="footer-heading">Contacto</MudText>
            <MudList T="string" Dense="true">
                <MudListItem Class="footer-text" Style="text-align:center;">
                    <MudIcon Icon="@Icons.Material.Filled.Email" Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;" />
                    <MudLink Href="mailto:info@refugiodelsol.com"> info@refugiodelsol.com</MudLink>
                </MudListItem>
                <MudListItem Class="footer-text" Style="text-align:center;">
                    <MudIcon Icon="@Icons.Custom.Brands.WhatsApp" Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;" />
                    <MudLink Href="https://wa.me/50312345678" Target="_blank"> Escríbenos por WhatsApp</MudLink>
                </MudListItem>
                <MudListItem Class="footer-text" Style="text-align:center;">
                    <MudIcon Icon="@Icons.Material.Filled.LocationOn" Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;" />
                    <MudLink Href="https://maps.google.com" Target="_blank">Ubicación en el mapa</MudLink>
                </MudListItem>
            </MudList>
        </MudItem>

        <!-- Redes sociales -->
        <MudItem xs="12" sm="6" md="4">
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Class="footer-heading" Style="text-align:center;text-transform:uppercase">Síguenos</MudText>
            <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center">
                <MudIconButton Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;"
                               Icon="@Icons.Custom.Brands.Facebook" />
                <MudIconButton Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;"
                               Icon="@Icons.Custom.Brands.Instagram" />
                <MudIconButton Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;"
                               Icon="@Icons.Custom.Brands.TikTok" />
            </MudStack>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-4" />

    <!-- Powered by -->
    <MudStack Direction="Column" AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="1" Class="mb-15">
        <MudText Typo="Typo.caption" Align="Align.Center" Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;">
            © @DateTime.Now.Year Refugio del Sol · Todos los derechos reservados
        </MudText>

        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="1">
            <MudText Typo="Typo.caption" Style="color: #1a1a1a !important;text-shadow: 0 1px 1px rgba(255,255,255,0.2) !important;">Powered by</MudText>
            <MudImage Src="/images/global-code-group-icon.png" Alt="Global Code Logo" Height="24" />
            <MudText Typo="Typo.caption" Class="footer-text">
                <MudLink Href="https://globalcodegroup.com" Target="_blank" Class="footer-powered-link">
                    Global Code Group
                </MudLink>
            </MudText>
        </MudStack>
    </MudStack>

</section>
